{{!< default}}

{{! The big featured header }}
<header id="site-head">
    <div class="dotted_bg"></div>
    <div class="site-head-inner">
        <div class="vertical">
            <div id="site-head-content" class="inner">

                <a id="blog-logo" class="default" href="{{@blog.url}}"></a>

                <h1 class="blog-title">{{@blog.title}}</h1>
                <h2 class="blog-description">{{@blog.description}}</h2>
            </div>
        </div>

        <div class="social-panel">
            <div class="buttons">
                <a href="http://twitter.com/lodossteam" class="btn" target="_blank">
                    <img alt="" src="data:image/svg+xml;base64,">
                </a>

                <a href="https://www.facebook.com/lodossteam" class="btn" target="_blank">
                    <img alt="" src="data:image/svg+xml;base64,">
                </a>

                <a href="{{@blog.url}}" class="btn" target="_blank">
                    <img alt="" src="data:image/svg+xml;base64,">
                </a>
            </div>
        </div>
    </div>
</header>
<div style="display:block">
    <div class="menu_top">
        <a class="toggle-mobile-menu" id="responsive-menu-button" href="#">MENU <i class="fa"></i></a>

        <div id="menu">
            <ul class="inner">
                <li><a href="/" class="active">Blog</a></li>
                <li><a href="/about/">About</a></li>
                <li><a href="/contact/">Contact</a></li>
            </ul>
        </div>
    </div>
</div>

<main class="content" role="main">

    <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}
        <div class="post-inner">
            <div class="column-left">
                <span class="post-meta">
                    <time datetime="{{date format='YYYY-MM-DD'}}">
                        <span>{{date format="DD"}}</span>
                        <span>{{date format="MM"}}月</span>
                        <span>{{date format="YYYY"}}</span>
                    </time>
                </span>
            </div>
            <div class="column-right">
                <header class="post-header">
                    <h1 class="post-title">{{{title}}}</h1>
                </header>

                <span class="post-meta clearfix">
                    <span><i class="fa fa-tag"></i>{{#if tags}}{{tags}}{{else}}无标签{{/if}}</span>
                </span>

                <section class="past-content">
                    {{content}}
                </section>

                <footer class="post-footer">

                    <section class="share bdsharebuttonbox">
                        <h4>立即分享:</h4>
                        <a href="#" class="bds_tsina" data-cmd="tsina" title="分享到新浪微博"></a>
                        <a href="#" class="bds_tqq" data-cmd="tqq" title="分享到腾讯微博"></a>
                        <a href="#" class="bds_weixin" data-cmd="weixin" title="分享到微信"></a>
                        <a href="#" class="bds_renren" data-cmd="renren" title="分享到人人网"></a>
                        <a href="#" class="bds_qzone" data-cmd="qzone" title="分享到QQ空间"></a>
                        <script>window._bd_share_config={"common":{"bdSnsKey":{},"bdText":"我看到了一篇不错的文章-《{{{title}}}》，快去看看吧！","bdUrl":"{{@blog.url}}/{{slug}}","bdDesc":"{{{title}}}","bdMini":"2","bdMiniList":false,"bdPic":"","bdStyle":"1","bdSize":"16"},"share":{},"selectShare":{"bdContainerClass":null,"bdSelectMiniList":["tsina","tqq","weixin","renren","qzone"]}};with(document)0[(getElementsByTagName('head')[0]||body).appendChild(createElement('script')).src='http://bdimg.share.baidu.com/static/api/js/share.js?v=89860593.js?cdnversion='+~(-new Date()/36e5)];</script>
                    </section>
                </footer>
            </div>
        </div>
    {{/post}}
    </article>
    <div class="to_top">
        <a href="#"><i class="fa fa-arrow-circle-up"></i></a>
    </div>

</main>
